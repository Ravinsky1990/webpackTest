{% import "macro/ui.njk" as ui %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Exo+2:300,400,600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="main.css">
</head>
<body>
  <header class="topLineForm">
    <div class="fixerLogo">
      <img src="../../img/logo.svg" alt="logo" class="fixerLogo__arrow">
      <img src="../../img/fixerLogo.png" alt="fixer" class="fixerLogo__fixer">
    </div>
    <div class="signUpLink">
      <span class="signUpLink__dontHave">Do not have an account?</span>
      <a href="#" class="signUpLink__link">Sign up</a>
    </div>
  </header>
  <main>
    <form action="#" class="signInForm">
      <h1 class="signInForm__title">Sign in</h1>
      <input type="text" placeholder="Login" class="formInput">
      <input type="password" placeholder="Password" class="formInput">
      <div class="signInForm__forgotPass">
        <a href="#">Forgot password?</a>
      </div>
      <div class="signInForm__btnWrap">
        {{ui.button("Sign in")}}
      </div>
    </form>
  </main>
</body>
</html>